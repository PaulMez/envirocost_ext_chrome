{
  "manifest_version": 3,
  "name": "Envirocost Chrome extension",
  "version": "1.0",
  "description": "extension that handles the API that connects to EnviroCost",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "host_permissions": ["http://envirocost.australiaeast.cloudapp.azure.com/"]
}
